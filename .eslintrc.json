{
	"extends": ["next/core-web-vitals", "prettier"],
	"plugins": ["prettier"],
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	},
	"rules": {
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never",
				"tsx": "never"
			}
		],
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index"
				],
				"alphabetize": { "order": "asc", "caseInsensitive": true },
				"newlines-between": "always"
			}
		],
		"@typescript-eslint/naming-convention": [
			"error",
			{
				"selector": "interface",
				"format": ["PascalCase"],
				"custom": {
					"regex": "^I[A-Z]",
					"match": true
				}
			}
		]
	}
}
